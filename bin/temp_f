DIR="/proc/acpi/thermal_zone"
if [ "$1" = "--detail" ]; then
	exit 0
fi

for i in `ls $DIR/*/temperature 2>/dev/null`; do
	t=$(sed -e "s/^[^0-9]\+//" -e "s/\s.*$//" "$i" | awk '{printf "%.0f", $1 *9/5 + 32}')
	printf "\005{=b kY}%s\005{-}\005{= kY}\260F\005{-} " "$t"
        break
done
