mailfile="/var/spool/mail/$USER"
if [ "$1" = "--detail" ]; then
	ls -alF "$mailfile" 2>&1
	exit 0
fi

[ -s "$mailfile" ] && printf "\005{= wk}[\005{-}\005{=b wk}M\005{-}\005{= wk}]\005{-} " || exit 0
