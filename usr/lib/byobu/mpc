__mpc_detail() {
	uname -a
}

__mpc_playing() {
	mpc status -f '' | grep -qF '[playing]'
}

__mpc() {
	__mpc_playing || return 0
	printf "%s " $(mpc current -f '[[%artist% - ]%title%]|[%file%]')
}

# vi: syntax=sh ts=4 noexpandtab
