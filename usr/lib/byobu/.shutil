		disk_io) _RET=3 ;;
		ec2_cost) _RET=601 ;;
		fan_speed) _RET=23 ;;
		hostname) _RET=607 ;;
		ip_address) _RET=127 ;;
		load_average) _RET=2 ;;
		logo) _RET=9999999 ;;
		mail) _RET=5 ;;
		mem_available) _RET=47 ;;
		mem_used) _RET=13 ;;
		menu) _RET=9999999 ;;
		network) _RET=3 ;;
		notify_osd) _RET=0 ;;
		processes) _RET=7 ;;
		raid) _RET=7 ;;
		rcs_cost) _RET=613 ;;
		reboot_required) _RET=5 ;;
		release) _RET=599 ;;
