__time_detail() {
	date
}

__time() {
	local secs=1
	[ -n "$TIME_SECONDS" ] && secs=$TIME_SECONDS
	case "$BYOBU_BACKEND" in
		screen)
			format="\0050c"
			[ "$secs" != "0" ] && format="$format:\005s"
			printf $format
		;;
		tmux|*)
			format="%H:%M"
			[ "$secs" != "0" ] && format="$format:%S"
			date +$format
		;;
	esac
}

# vi: syntax=sh ts=4 noexpandtab
