[ "$UTF8" = "1" ] && ICON="â™¸" || ICON="T"

dir="$HOME/.local/share/Trash/files"
[ ! -d $dir ] && exit 0

count=$(ls $dir|wc -l)
[ "$count" -eq 0 ] && exit 0

echo -n "$ICON[$count] "
