TRASH_DIR="$HOME/.local/share/Trash/files"

__trash_detail() {
	find "$TRASH_DIR"
}

__trash() {
	local count
	[ -d "$TRASH_DIR" ] || return
	count=$(ls $dir|wc -l)
	[ "$count" = "0" ] && return
	printf "%s[%s]" "$ICON_TRASH" "$count"
}

# vi: syntax=sh ts=4 noexpandtab